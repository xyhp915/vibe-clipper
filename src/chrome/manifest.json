{
  "manifest_version": 3,
  "name": "Logseq Clipper",
  "version": "1.0",
  "description": "A simple Chrome extension with a popup.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}